<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.boardSite.mapper.AnswerMapper">
	
	<!-- 댓글 작성 -->
	<insert id="insertAnswer" parameterType="java.util.HashMap" useGeneratedKeys="true" keyProperty="answerId">
    <![CDATA[ 
    INSERT INTO answer (
        content,
        create_date,
        question_id,
        author,
        modify_date
    ) VALUES (
        #{content},
        #{createDate},
        #{questionId},
        #{author},
        #{updateDate}
    )
    ]]>
</insert>
    
    <!-- 특정 게시글의 댓글 목록 조회 -->
    <select id="selectAnswerList" parameterType="java.util.HashMap" resultType="java.util.HashMap">
    <![CDATA[ 
   	 	SELECT
   	 		id,
   	 		question_id,
    		content,
    		create_date,
    		author,
    		modify_date
    	FROM
    		answer
    	WHERE 
    		question_id = #{questionId}
    ]]>
    </select>
    
     <!-- 댓글 상세 조회 -->
    <select id="answerDetail" parameterType="java.util.HashMap" resultType="java.util.HashMap">
    <![CDATA[ 
   	 	SELECT
    		content,
    		create_date,
    		question_id,
    		author,
    		modify_date
    	FROM
    		answer
    	WHERE 
    		id = #{answerId}
    ]]>
    </select>
    
    <!-- 댓글 수정 -->
    <update id="updateAnswer" parameterType="java.util.HashMap">
    <![CDATA[ 
    	UPDATE
    		answer
    	SET
    		content = #{content},
    		modify_date = #{updateDate}
  		WHERE
  			id = #{answerId}
    ]]>
    
    </update>
    
    <!-- 댓글 삭제 -->
    <delete id="deleteAnswer" parameterType="java.util.HashMap">
	<![CDATA[ 
		DELETE
		FROM
			answer
		WHERE
			id = #{answerId}
	]]>
	</delete>
</mapper>
